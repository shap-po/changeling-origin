{
  "badges": [
    "origins:toggle"
  ],

  "type": "origins:multiple",

  "cooldown": {
    "type": "origins:cooldown",
    "cooldown": 6000,
    "hud_render": {
      "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_03.png",
      "bar_index": 9
    }
  },

  "toggled": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,

    "hud_render": {
      "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_01.png",
      "bar_index": 6,
      "condition": {
        "type": "origins:resource",
        "resource": "*:*_toggled",
        "comparison": "==",
        "compare_to": 1
      },
      "should_render": true
    }
  },

  "active": {
    "type": "origins:active_self",
    "key": "key.origins.primary_active",

    "entity_action": {
      "type": "origins:if_else_list",
      "actions": [
        {
          "condition": {
            "type": "shappoli:shape_condition",
            "bientity_condition": {
              "type": "origins:equal",
              "inverted": true
            }
          },
          "action": {
            "type": "shappoli:switch_shape"
          }
        },
        {
          "condition": {
            "type": "origins:or",
            "conditions": [
              {
                "type": "origins:resource",
                "resource": "*:*_toggled",
                "comparison": "==",
                "compare_to": 1
              },
              {
                "type": "origins:resource",
                "resource": "*:*_cooldown",
                "comparison": "!=",
                "compare_to": 0
              }
            ]
          },
          "action": {
            "type": "origins:change_resource",
            "resource": "*:*_toggled",
            "operation": "set",
            "change": 0
          }
        },
        {
          "condition": {
            "type": "origins:constant",
            "value": true
          },
          "action": {
            "type": "origins:change_resource",
            "resource": "*:*_toggled",
            "operation": "set",
            "change": 1
          }
        }
      ]
    }
  },

  "shape_on_kill": {
    "type": "origins:action_on_hit",

    "condition": {
      "type": "origins:resource",
      "resource": "*:*_toggled",
      "comparison": "==",
      "compare_to": 1
    },

    "bientity_condition": {
      "type": "origins:target_condition",
      "condition": {
        "type": "origins:and",
        "conditions": [
          {
            "type": "origins:in_tag",
            "tag": "changelingorigin:denylist",
            "inverted": true
          },
          {
            "type": "origins:health",
            "comparison": "<=",
            "compare_to": 0
          }
        ]
      }
    },
    "bientity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "shappoli:switch_shape"
        },
        {
          "type": "origins:actor_action",
          "action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:change_resource",
                "resource": "*:*_toggled",
                "operation": "set",
                "change": 0
              },
              {
                "type": "origins:trigger_cooldown",
                "power": "*:*_cooldown"
              }
            ]
          }
        }
      ]
    }
  }
}
